@using MudBlazor

<MudPaper Class="pa-4" Elevation="4">
    <div class="justify-content-center">
        @if (@AfficheBtn) {
            <!-- Bouton Up pour changer la couleur -->
            <button type="button" @onclick="UpColor" class="btn btn-primary mb-2">
                <MudIcon Icon="@Icons.Material.Filled.KeyboardArrowUp" Title="Up" />
            </button>

        }
        <!-- Affiche un rectangle coloré représentant la couleur -->
        <div class="rounded-1" style="width: 50px; height: 50px; background-color:@SelectedColor;"></div>

        @if (@AfficheBtn)
        {
            <!-- Bouton Down pour changer la couleur -->
            <button type="button" @onclick="DownColor" class="btn btn-primary mt-2">
                <MudIcon Icon="@Icons.Material.Filled.KeyboardArrowDown" Title="Down" />
            </button>
        }
    </div>

</MudPaper>
